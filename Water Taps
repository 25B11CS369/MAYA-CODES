#include<stdio.h>
int main()
{
    int x, y;
    int time;
    scanf("%d %d", &x, &y);
    if(x < 1 || x > 100 || y < 1 || y > 100)
    {
        printf("Invalid input. Values must be between 1 and 100.");
        return  0;
    }
    time = (x * y) / (x + y);
    printf("%d", time);
    return 0;
}
