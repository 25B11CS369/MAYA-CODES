#include <stdio.h>
int main() 
{
    int speed_kmph;
    double speed_mps;
    // Read input speed in km/h
    scanf("%d", &speed_kmph);
    // Convert to m/s (1 km/h = 0.27778 m/s)
    speed_mps = speed_kmph * 1000.0 / 3600.0;
    // Print result with 2 decimal places
    printf("%.2f", speed_mps);
    return 0;
}
