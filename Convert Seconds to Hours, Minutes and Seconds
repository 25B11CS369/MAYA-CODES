#include <stdio.h>
int main()
{
    int seconds;
    scanf("%d", &seconds); 
    int hours = seconds / 3600;          
    int remaining = seconds % 3600;        
    int secs = remaining % 60;            
    int minutes = remaining / 60;        
    printf("H:M:S-%d:%d:%d", hours, minutes, secs);
    return 0;
}
