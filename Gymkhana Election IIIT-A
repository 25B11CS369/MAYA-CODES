#include<stdio.h>
int main()
{
    long long n, m;
    long long required;
    scanf("%lld %lld", &n, &m);
    if (n < 2 || m < n || m > 1000000000LL) 
    {
        printf("Invalid input. Ensure 2 <= n <= m <= 1e9.");
        return 0;
    }
required = (m / 2) + 1;
printf("%lld", required);
return 0;
}
